@using RunTogether.Data

@inject DialogService dialogService
@inject ApplicationDbContext dbContext
@inject IJSRuntime JSRuntime

<!-- Sponsor bar top title -->
<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Sponsorer</a>
</div>

<!-- List of all sponsors -->
<div class="scrollable">
    <ul style="display: flex; flex-direction: column; padding: 10px;">
        @foreach (var sponsor in dbContext.Sponsors)
        {
            <RadzenImage Path="@sponsor.Image" Style="height: 10rem; max-width: 100%; object-fit: contain; margin: 0.2rem;" />
        }
    </ul>
</div>