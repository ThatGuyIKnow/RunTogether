@inject DialogService dialogService

<p>Udfyld formularen for at skabe en ny løber:</p>

<div class="row">
    <div class="col-md-6">
        <h3>Navn:</h3>
        <RadzenTextBox Style="margin-bottom: 20px" Change="@(args => Change(args, ""))" />

        <h3>Email:</h3>
        <RadzenTextBox Style="margin-bottom: 20px" Change="@(args => Change(args, ""))" />

        <h3>Rute:</h3>
        <RadzenDropDown AllowClear="true" TValue="string" Style="margin-bottom: 20px" Change="@(args => Change("string", "DropDown"))" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenButton Click="@((args) => dialogService.Close(true))" Text="OK" Style="margin-bottom: 10px; width: 150px" />
        <RadzenButton Click="@((args) => dialogService.Close(false))" ButtonStyle="ButtonStyle.Secondary" Text="Annuler" Style="margin-bottom: 10px; width: 150px" />
    </div>
</div>

@code {
    string value;

    Dictionary<DateTime, string> events = new Dictionary<DateTime, string>();

    void Change(string value, string name)
    {
        events.Add(DateTime.Now, $"{name} value changed to {value}");
        StateHasChanged();
    }
}
